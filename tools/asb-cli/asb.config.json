{
  "name": "alice-semantic-bridge-cli",
  "version": "2.0.0",
  "description": "Alice Semantic Bridge Command Line Interface",
  "redis": {
    "host": "localhost",
    "port": 6379,
    "db": 2,
    "keyPrefix": "asb"
  },
  "project": {
    "key": "alice-semantic-bridge",
    "environment": "development"
  },
  "mcp": {
    "enabled": true,
    "server": {
      "port": 3002,
      "protocol": "stdio"
    },
    "tools": [
      {
        "name": "project_status",
        "description": "Get ASB project status"
      },
      {
        "name": "list_agents",
        "description": "List all active ASB agents"
      },
      {
        "name": "create_task",
        "description": "Create a task for agents"
      },
      {
        "name": "share_context",
        "description": "Share context with other agents"
      },
      {
        "name": "get_context",
        "description": "Get shared context"
      },
      {
        "name": "broadcast_message",
        "description": "Broadcast message to all agents"
      }
    ]
  },
  "agents": {
    "registry": {
      "claude-code-cli": {
        "role": "CTO",
        "capabilities": ["architecture", "code-review", "planning", "documentation", "cli", "debugging"],
        "priority": 1
      },
      "gemini-cli": {
        "role": "Senior Developer",
        "capabilities": ["implementation", "testing", "optimization", "devops"],
        "priority": 2
      },
      "codex-cli": {
        "role": "DevOps Engineer",
        "capabilities": ["automation", "infrastructure", "ci-cd", "monitoring"],
        "priority": 3
      },
      "deepseek": {
        "role": "Junior Developer",
        "capabilities": ["documentation", "small-tasks", "formatting"],
        "priority": 4
      }
    }
  },
  "tasks": {
    "types": [
      "implementation",
      "testing",
      "optimization",
      "deployment",
      "monitoring",
      "documentation",
      "frontend",
      "backend",
      "devops"
    ],
    "priorities": ["low", "medium", "high", "critical"],
    "queueTimeout": 3600000
  },
  "phase3": {
    "status": "80%",
    "completed": [
      "manage-operations-architecture",
      "redis-cache-design",
      "error-handling-patterns",
      "api-documentation",
      "performance-analysis"
    ],
    "pending": [
      "implementation",
      "load-testing",
      "monitoring-integration"
    ],
    "metrics": {
      "deleteBySourceId": "100ms/1000items",
      "getStatistics": "50ms cached",
      "cleanupOrphaned": "5min/100k items"
    }
  }
}
