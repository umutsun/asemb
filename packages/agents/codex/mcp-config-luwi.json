{
  "version": "1.0",
  "servers": {
    "asb-cli": {
      "type": "stdio",
      "command": "node",
      "args": ["C:\\mcp-servers\\asb-cli\\index.js"],
      "env": {
        "NODE_ENV": "production",
        "ASB_PROJECT_ROOT": "C:\\xampp\\htdocs\\alice-semantic-bridge",
        "OPENAI_API_KEY": "${env:OPENAI_API_KEY}",
        "POSTGRES_HOST": "91.99.229.96",
        "POSTGRES_PORT": "5432",
        "POSTGRES_DB": "asemb",
        "POSTGRES_USER": "asemb_user",
        "POSTGRES_PASSWORD": "${env:POSTGRES_PASSWORD}",
        "REDIS_HOST": "91.99.229.96",
        "REDIS_PORT": "6379",
        "REDIS_DB": "2",
        "REDIS_PASSWORD": "${env:REDIS_PASSWORD}",
        "N8N_HOST": "n8n.luwi.dev",
        "N8N_API_KEY": "${env:N8N_API_KEY}"
      },
      "metadata": {
        "name": "ASB-CLI MCP Server (luwi.dev)",
        "description": "Alice Semantic Bridge CLI for luwi.dev deployment",
        "version": "2.0.0",
        "author": "Alice"
      },
      "capabilities": {
        "tools": true,
        "resources": true,
        "prompts": false,
        "sampling": false
      },
      "tools": [
        {
          "name": "asb_status",
          "description": "Get ASB project status and configuration",
          "category": "info"
        },
        {
          "name": "asb_search",
          "description": "Search in ASB database using pgvector",
          "category": "database"
        },
        {
          "name": "asb_embed",
          "description": "Generate embeddings for text using OpenAI",
          "category": "ai"
        },
        {
          "name": "asb_webscrape",
          "description": "Scrape web content and optionally store embeddings",
          "category": "web"
        },
        {
          "name": "asb_workflow",
          "description": "Manage n8n workflows",
          "category": "workflow"
        },
        {
          "name": "asb_database",
          "description": "Database operations for pgvector",
          "category": "database"
        },
        {
          "name": "asb_redis",
          "description": "Redis cache operations",
          "category": "cache"
        },
        {
          "name": "asb_test",
          "description": "Run ASB tests",
          "category": "development"
        },
        {
          "name": "asb_build",
          "description": "Build and deploy ASB",
          "category": "deployment"
        },
        {
          "name": "asb_config",
          "description": "Manage ASB configuration",
          "category": "config"
        },
        {
          "name": "asb_deploy_luwi",
          "description": "Deploy to luwi.dev server",
          "category": "deployment"
        }
      ],
      "resources": [
        {
          "uri": "asb://status",
          "name": "ASB Status",
          "description": "Current ASB project status",
          "mimeType": "application/json"
        },
        {
          "uri": "asb://config",
          "name": "ASB Configuration",
          "description": "ASB configuration settings",
          "mimeType": "application/json"
        },
        {
          "uri": "asb://workflows",
          "name": "ASB Workflows",
          "description": "Available n8n workflows",
          "mimeType": "application/json"
        },
        {
          "uri": "asb://database/stats",
          "name": "Database Statistics",
          "description": "pgvector database statistics",
          "mimeType": "application/json"
        },
        {
          "uri": "asb://server/luwi",
          "name": "Luwi Server Status",
          "description": "luwi.dev server connection status",
          "mimeType": "application/json"
        }
      ]
    },
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-filesystem"],
      "env": {
        "FILESYSTEM_ROOT": "C:\\xampp\\htdocs\\alice-semantic-bridge"
      },
      "metadata": {
        "name": "Filesystem MCP",
        "description": "Provides filesystem access for ASB project"
      }
    },
    "git": {
      "type": "stdio",
      "command": "uvx",
      "args": ["mcp-server-git", "--repository", "."],
      "metadata": {
        "name": "Git MCP",
        "description": "Git operations for version control"
      }
    },
    "fetch": {
      "type": "stdio",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-fetch"],
      "metadata": {
        "name": "Web Fetch MCP",
        "description": "HTTP requests and web scraping"
      }
    },
    "postgres": {
      "type": "stdio",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_URL": "postgresql://asemb_user:${env:POSTGRES_PASSWORD}@91.99.229.96:5432/asemb?sslmode=require"
      },
      "metadata": {
        "name": "PostgreSQL MCP",
        "description": "Direct PostgreSQL/pgvector access on luwi.dev"
      }
    },
    "n8n": {
      "type": "stdio",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-n8n"],
      "env": {
        "N8N_BASE_URL": "https://n8n.luwi.dev",
        "N8N_API_KEY": "${env:N8N_API_KEY}"
      },
      "metadata": {
        "name": "n8n MCP",
        "description": "n8n workflow management on luwi.dev"
      }
    }
  },
  "settings": {
    "autoStart": true,
    "debug": false,
    "timeout": 30000,
    "reconnect": true,
    "maxReconnects": 5,
    "remoteServer": {
      "host": "91.99.229.96",
      "name": "luwi.dev",
      "n8nUrl": "https://n8n.luwi.dev"
    }
  }
}