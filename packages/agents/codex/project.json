{
  "project": {
    "name": "alice-semantic-bridge",
    "version": "2.0.0",
    "type": "n8n-extension",
    "description": "Advanced semantic search and RAG implementation with pgvector and n8n"
  },
  "environment": {
    "runtime": "node",
    "version": ">=18.0.0",
    "package_manager": "npm"
  },
  "mcp": {
    "enabled": true,
    "primary_server": "asb-cli",
    "auto_connect": true,
    "servers": ["asb-cli"]
  },
  "integrations": {
    "n8n": {
      "enabled": true,
      "nodes": [
        "AliceSemanticBridge",
        "PgHybridQuery",
        "PgvectorQuery",
        "PgvectorUpsert",
        "WebScrapeEnhanced",
        "TextChunk",
        "DocumentProcessor",
        "SitemapFetch",
        "RedisPublish"
      ]
    },
    "database": {
      "type": "postgresql",
      "extension": "pgvector",
      "host": "localhost",
      "port": 5432,
      "database": "asb"
    },
    "cache": {
      "type": "redis",
      "host": "localhost",
      "port": 6379
    },
    "ai": {
      "provider": "openai",
      "models": {
        "embedding": "text-embedding-ada-002",
        "completion": "gpt-4"
      }
    }
  },
  "commands": {
    "build": "npm run build",
    "test": "npm test",
    "deploy": "npm run deploy:prepare",
    "mcp:start": "node C:\\mcp-servers\\asb-cli\\index.js",
    "mcp:test": "node C:\\mcp-servers\\asb-cli\\test.js",
    "workflow:list": "asb_workflow action=list",
    "db:stats": "asb_database operation=stats",
    "cache:flush": "asb_redis command=flush"
  },
  "features": {
    "semantic_search": true,
    "hybrid_search": true,
    "rag_pipeline": true,
    "web_scraping": true,
    "document_processing": true,
    "redis_caching": true,
    "workflow_automation": true
  },
  "documentation": {
    "readme": "README.md",
    "mcp_setup": "ASB_MCP_SETUP.md",
    "claude_code_setup": "CLAUDE_CODE_MCP_SETUP.md",
    "api": "docs/api.md",
    "architecture": "docs/ARCHITECTURE.md"
  }
}