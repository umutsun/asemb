{
  "name": "claude-frontend-sandbox",
  "version": "1.0.0",
  "type": "frontend",
  "description": "Claude Code Frontend Development Sandbox for ASB UI",
  "environment": {
    "NODE_ENV": "development",
    "SANDBOX_MODE": "true",
    "AGENT_NAME": "claude",
    "AGENT_ROLE": "frontend"
  },
  "workspace": {
    "root": "./frontend",
    "src": "./frontend/src",
    "public": "./frontend/public",
    "components": "./frontend/src/components",
    "styles": "./frontend/src/styles",
    "hooks": "./frontend/src/hooks",
    "utils": "./frontend/src/utils"
  },
  "permissions": {
    "fileSystem": {
      "read": ["./frontend/**", "./shared/**", "./.claude/**"],
      "write": ["./frontend/**", "./.claude/logs/**"],
      "execute": ["node", "npm", "npx", "next", "tailwindcss"]
    },
    "network": {
      "allowed": [
        "localhost:3000",
        "localhost:8080",
        "localhost:6379",
        "91.99.229.96:5432"
      ],
      "blocked": ["*"]
    },
    "processes": {
      "maxConcurrent": 5,
      "allowedCommands": [
        "npm install",
        "npm run dev",
        "npm run build",
        "npm run lint",
        "npm test",
        "npx create-next-app",
        "npx shadcn-ui@latest"
      ]
    }
  },
  "resources": {
    "memory": "2GB",
    "cpu": "2 cores",
    "storage": "5GB",
    "timeout": 3600
  },
  "dependencies": {
    "required": [
      "node@>=18.0.0",
      "npm@>=9.0.0"
    ],
    "auto-install": [
      "next@14",
      "react@18",
      "react-dom@18",
      "typescript@5",
      "tailwindcss@3",
      "@types/node",
      "@types/react"
    ]
  },
  "scripts": {
    "init": "npm init -y && npm install next react react-dom typescript @types/node @types/react tailwindcss",
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "sharedMemory": {
    "redis": {
      "db": 2,
      "keyPrefix": "asb:claude:",
      "channels": [
        "asb:agents:updates",
        "asb:frontend:events",
        "asb:ui:components"
      ]
    }
  },
  "communication": {
    "withGemini": {
      "api": "http://localhost:8080/api/v2",
      "websocket": "ws://localhost:8080"
    },
    "withCodex": {
      "testResults": "asb:tests:results",
      "buildStatus": "asb:build:status"
    }
  },
  "tools": {
    "vscode": {
      "extensions": [
        "dsznajder.es7-react-js-snippets",
        "bradlc.vscode-tailwindcss",
        "prisma.prisma"
      ]
    },
    "chrome": {
      "devtools": true,
      "extensions": ["React Developer Tools", "Redux DevTools"]
    }
  }
}
