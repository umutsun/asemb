{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "index.ts",
    "nodes/WebScrape.node.ts",
    "nodes/PgvectorUpsert.node.ts",
    "nodes/PgvectorQuery.node.ts",
    "nodes/RedisPublish.node.ts",
    "nodes/AliceSemanticBridge.node.ts",
    "credentials/**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": [
    "nodes/*Enhanced*.ts",
    "nodes/DocumentProcessor.node.ts"
  ]
}

