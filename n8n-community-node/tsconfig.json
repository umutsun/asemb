{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "index.ts",
    "nodes/**/*.ts",
    "credentials/**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": [
    "nodes/*Enhanced*.ts",
    "nodes/*optimized*.ts",
    "nodes/*.bak.ts",
    "nodes/DocumentProcessor.node.ts"
  ]
}

