# ASEMB Environment Configuration
# Copy this file to .env.asemb and update with your values

# === General Configuration ===
NODE_ENV=development
LOG_LEVEL=debug
PORT=8000
HOST=0.0.0.0

# === Database Configuration ===
# PostgreSQL with pgvector
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=asemb
POSTGRES_USER=asemb_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=40

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# Neo4j Configuration (Optional)
NEO4J_ENABLED=false
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# === LightRAG Configuration ===
LIGHTRAG_WORKING_DIR=./workspaces
LIGHTRAG_LOG_LEVEL=info
LIGHTRAG_CHUNK_SIZE=1024
LIGHTRAG_CHUNK_OVERLAP=128
LIGHTRAG_MAX_TOKENS=8192

# === LLM Provider Configuration ===
# Primary LLM Provider (openai, anthropic, google, azure, local)
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=30

# Anthropic Configuration (Optional)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Configuration (Optional)
GOOGLE_API_KEY=your-google-api-key
GOOGLE_MODEL=gemini-1.5-pro

# Azure OpenAI Configuration (Optional)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_KEY=your-azure-key
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Local Model Configuration (Optional)
LOCAL_MODEL_URL=http://localhost:11434
LOCAL_MODEL_NAME=llama3
LOCAL_EMBEDDING_URL=http://localhost:11434
LOCAL_EMBEDDING_MODEL=nomic-embed-text

# === API Configuration ===
API_PREFIX=/api/v1
API_KEY=asemb-api-key-change-this
API_KEY_HEADER=X-ASEMB-API-Key
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5678
ENABLE_DOCS=true
DOCS_URL=/docs

# === Security Configuration ===
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# === Multi-Tenant Configuration ===
ENABLE_MULTI_TENANT=true
DEFAULT_WORKSPACE_PREFIX=asemb
MAX_WORKSPACES_PER_CUSTOMER=10
WORKSPACE_ISOLATION_LEVEL=strict
DEFAULT_QUOTA_DOCUMENTS=10000
DEFAULT_QUOTA_QUERIES_PER_DAY=1000

# === Storage Configuration ===
STORAGE_BACKEND=hybrid  # Options: postgres, redis, hybrid, neo4j
VECTOR_DIMENSION=1536
MAX_DOCUMENT_SIZE_MB=10
ENABLE_DOCUMENT_VERSIONING=true
DOCUMENT_RETENTION_DAYS=365

# === Performance Configuration ===
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
ENABLE_QUERY_OPTIMIZATION=true
PARALLEL_PROCESSING_ENABLED=true
MAX_WORKERS=4
BATCH_SIZE=100

# === Monitoring Configuration ===
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
TRACING_ENDPOINT=http://localhost:14268/api/traces
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PATH=/health

# === n8n Configuration ===
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_EXECUTION_MODE=main  # main or own
N8N_TIMEOUT_SECONDS=300

# === Dashboard Configuration (Optional) ===
ENABLE_DASHBOARD=false
DASHBOARD_PORT=3000
DASHBOARD_AUTH_ENABLED=true

# === Development Configuration ===
DEBUG_MODE=false
ENABLE_PROFILING=false
MOCK_LLM_RESPONSES=false
SEED_SAMPLE_DATA=false

# === Testing Configuration ===
TEST_MODE=false
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/asemb_test
TEST_REDIS_URL=redis://localhost:6379/1